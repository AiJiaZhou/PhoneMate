<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/mLayoutTitleMenu"
    android:background="@color/color_green"
    android:padding="@dimen/comm_padding">


    <TextView
        android:id="@+id/mTvLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/mTvRight"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_text_content" />

    <TextView
        android:id="@+id/mTvCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="菜单"
        android:maxLines="8"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_text_title" />

    <TextView
        android:id="@+id/mTvRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="更多"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_text_content" />


</RelativeLayout>
