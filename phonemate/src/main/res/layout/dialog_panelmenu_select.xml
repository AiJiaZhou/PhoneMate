<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvTools"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="小工具"
                android:textColor="@color/color_orange"
                android:textSize="@dimen/dimen_text_content" />

            <TextView
                android:id="@+id/mTvApps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="应用"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/dimen_text_content" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_white">

            <View
                android:id="@+id/mMoveView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_orange" />
        </FrameLayout>

        <ListView
            android:listSelector="@color/color_trans"
            android:divider="@color/color_line"
            android:dividerHeight="1px"
            android:background="@color/color_blue_trans_AA"
            android:id="@+id/mListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>