<?xml version="1.0" encoding="utf-8"?><!-- 主面板 布局-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <include layout="@layout/include_title_view" />

        <include layout="@layout/include_titlemenu_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/color_blue_trans_77"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/mTvControl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="主面板"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_text_content" />

                <TextView
                    android:id="@+id/mTvSwitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="长按"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_text_content" />

                <TextView
                    android:id="@+id/mTvDoubleClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="双击"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_text_content" />

                <TextView
                    android:id="@+id/mTvBg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="背景"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_text_content" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_white">

                <View
                    android:id="@+id/mMoveView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_orange" />
            </FrameLayout>

            <android.support.v4.view.ViewPager
                android:background="@color/color_white"
                android:id="@+id/mViewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>