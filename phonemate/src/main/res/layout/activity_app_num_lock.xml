<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <LinearLayout
        android:id="@+id/mLayoutSetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_lock_bg"
        android:orientation="vertical">

        <include layout="@layout/include_title_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mIvApp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/mTvPasswordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_margin"
                android:gravity="center"
                android:text="请输入解锁密码"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_text_content" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TableRow>
                    <TabHost></TabHost>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>