<?xml version="1.0" encoding="utf-8"?><!-- 主面板 布局-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_trans_77">

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/mLayoutPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_floatview_panel_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/comm_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/comm_padding"
            android:text="圆角"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_text_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar

                android:id="@+id/mSbRadius"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_trans"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progress="50"
                android:progressDrawable="@drawable/shape_seekbar_progress"
                android:thumb="@drawable/selector_seekbar_thumb"
                android:thumbOffset="12dp" />

            <TextView
                android:id="@+id/mTvRadius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/comm_padding"
                android:text="100%"
                android:textColor="@color/color_white_trans_99"
                android:textSize="@dimen/dimen_text_ignore_small" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/comm_padding"
            android:text="虚化"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_text_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar

                android:id="@+id/mSbTrans"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_trans"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progress="50"
                android:progressDrawable="@drawable/shape_seekbar_progress"
                android:thumb="@drawable/selector_seekbar_thumb"
                android:thumbOffset="12dp" />

            <TextView
                android:id="@+id/mTvTrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/comm_padding"
                android:text="100%"
                android:textColor="@color/color_white_trans_99"
                android:textSize="@dimen/dimen_text_ignore_small" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/comm_padding"
            android:text="尺寸"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_text_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/mSbSize"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_trans"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progress="50"
                android:progressDrawable="@drawable/shape_seekbar_progress"
                android:thumb="@drawable/selector_seekbar_thumb"
                android:thumbOffset="12dp" />

            <TextView
                android:id="@+id/mTvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/comm_padding"
                android:text="100%"
                android:textColor="@color/color_white_trans_99"
                android:textSize="@dimen/dimen_text_ignore_small" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_gravity="bottom"
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:background="@color/color_white" />
</FrameLayout>