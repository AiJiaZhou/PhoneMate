<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_press"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/mIvIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/comm_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/dimen_text_content" />

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:id="@+id/mTvType"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_green"
                android:textSize="@dimen/dimen_text_ignore_small" />
        </LinearLayout>
        <TextView
            android:id="@+id/mTvDetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/color_text_gray"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimen_text_ignore" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mLayoutOprea"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:background="@drawable/selector_trans_to_blacktrans"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mIvOprea"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_app_uninstall_on" />


        <TextView
            android:id="@+id/mTvOprea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="卸 载"
            android:textColor="@color/color_green"
            android:textSize="@dimen/dimen_text_dimen_small" />
    </LinearLayout>
</LinearLayout>